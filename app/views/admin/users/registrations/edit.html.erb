<% provide(:head_title, "Editar") %>
<div class="page">
  <div class="page-single">
    <div class="container">
      <div class="row">
        <div class="col col-login mx-auto">
          <h2>Editar <%= @user.name.to_s.humanize %></h2>

          <%= simple_form_for(@user, url: admin_user_registration_path(@user), method: :put) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :name, disabled: true, required: true, autofocus: true %>
              <%= f.input :email, disabled: true, autofocus: true %>
              <%= f.input :alternative_email, autofocus: true %>
              <%= f.input :registration_number, disabled: true, required: true, autofocus: true %>
              <%= f.input :cpf, disabled: true, required: true, autofocus: true %>
              <% if current_user.try(:admin?) %>
                <%= f.input :active, as: :boolean %>
              <% end %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Salvar" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>