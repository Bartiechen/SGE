    <div class="container">
      <div class="row">
        <div class="col col-login mx-auto">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {:class => 'card'}) do |f| %>
            <div class="card-body p-6">
              <div class="card-title">Log in</div>
              <%= f.input :login, required: false, autofocus: true, label_html: {class: 'form-label'} %>
              <%= f.input :password, required: false, label_html: {class: 'form-label'} %>
              <%= f.input :remember_me, as: :checkbox_tabler if devise_mapping.rememberable? %>
            </div>
            <div class="form-footer">
              <div class="form-actions">
                <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
              </div>
            </div>
          <% end %>


        </div>
      </div>
    </div>
  </div>
</div>
