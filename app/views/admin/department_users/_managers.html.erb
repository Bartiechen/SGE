  <%= simple_form_for(@user_role, method: :post, url: admin_department_add_member_path) do |f| %>

    <label class="form-label">Adicionar Usu√°rios</label>
    <div class="row gutters-xs">
        <div class="col-lg-5">
          <%= f.association :user,
                            class: 'form-control custom-select',
                            label: false %>
        </div>
        <div class="col-lg-5">
