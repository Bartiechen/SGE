<% provide(:page_title, 'Adicionar membros ao departamento') %>
<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-12">
    <%= render 'admin/department_users/managers' %>
  </div>
  <div class="col-lg-6 col-md-6 col-sm-12">
    <%= render 'admin/department_users/coordinators-event' %>
  </div>
</div>
<div class="row">
  <div class="col">
    <% @users.each do |user| %>
      <div class="col tag mt-1">
    <span class="col-6">
      <%= user.user.name %>
    </span>
        <% if user.role.flag == 'manager' %>
          <span class="col-5 tag-addon tag-danger"><%= user.role.name %></span>
        <% else %>
          <span class="col-5 tag-addon tag-success"><%= user.role.name %></span>
        <% end %>
        <%= link_to admin_department_destroy_member_path(@department, user), method: :delete, class: 'col-1 tag-addon' do %>
          <i class="fe fe-x"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
