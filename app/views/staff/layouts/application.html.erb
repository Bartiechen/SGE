<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:head_title)) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'staff/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="page">
    <div class="page-main">
      <%= render 'staff/layouts/navtop' %>
      <%= render 'staff/layouts/navbottom' %>

      <div class="container">

        <div class="page-header">
          <div class="page-options d-flex">
            <h1 class="page-title">
              <%= yield(:page_title) %>
            </h1>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-3 mb-4">
            <%= render 'staff/layouts/sidebar' %>
          </div>

          <div class="col-lg-9 order-lg-1">

            <div class="card">
              <div class="card-body">
                <%= render 'shared/flash_messages' %>
                <%= yield %>
              </div>
            </div>

          </div>
        </div>

      </div>

    </div>
    <%= render 'staff/layouts/footer' %>
  </div>
  </body>
</html>
