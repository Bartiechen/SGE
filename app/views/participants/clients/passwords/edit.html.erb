<div class="card">
  <div class="card-body p-5">
    <div class="card-title"><%= t('devise.passwords.edit.title') %></div>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password,
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} #{t('devise.registration.password_character_length')}" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation, required: true %>
      </div>

      <div class="form-footer">
        <%= f.button :submit, 'Mudar minha senha', class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <%= render "participants/clients/shared/links" %>
  </div>
</div>