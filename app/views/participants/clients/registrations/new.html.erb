<div class="card">
  <div class="card-body p-6">
    <div class="card-title"><%= t('devise.registration.title') %></div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name,
                    required: true,
                    autofocus: true,
                    label_html: {class: 'form-label'} %>
        <%= f.input :ra,
                    required: true,
                    autofocus: true,
                    label_html: {class: 'form-label'} %>
        <%= f.input :cpf,
                    required: true,
                    autofocus: true,
                    label_html: {class: 'form-label'} %>

        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label_html: {class: 'form-label'} %>
        <%= f.input :alternative_email,
                    required: true,
                    autofocus: true,
                    label_html: {class: 'form-label'} %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length}  #{t('devise.registration.password_character_length')}" if @minimum_password_length),
                    label_html: {class: 'form-label'} %>
        <%= f.input :password_confirmation,
                    required: true,
                    label_html: {class: 'form-label'}%>
      </div>

      <div class="form-footer">
        <%= f.button :submit, 'Cadastrar', class: 'btn btn-primary btn-block' %>
      </div>

    <% end %>
  </div>
</div>
<%= render "participants/clients/shared/links" %>
